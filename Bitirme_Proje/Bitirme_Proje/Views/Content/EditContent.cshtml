@model EntityLayer.Concrete.Content
@{
    ViewData["Title"] = "EditContent";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">İçerik Düzenleme Sayfası</h3>
</div>
@using (Html.BeginForm("EditContent", "Content", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> İçerik Düzenleme Paneli </p>
                <form class="forms-sample">
                    <div class="form-group">
                        @*<label>ID</label>*@
                        @Html.HiddenFor(x => x.ContentID, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Başlık</label>
                        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                    </div>
                    
                    <div class="form-group">
                        <label>Fotoğraf Url</label>
                        @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                    </div>
                    

                    <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                    <button class="btn btn-dark">İptal</button>
                </form>
            </div>
        </div>
    </div>
}


