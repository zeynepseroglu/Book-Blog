@using EntityLayer.Concrete
@model List<Review>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">İncelemeler</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık.</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ReviewID</td>
                                <td>@item.Name</td>
                                <td>@item.Date</td>
                                <td><a href="/Review/DeleteReview/@item.ReviewID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Review/EditReview/@item.ReviewID" class="btn btn-outline-success">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Review/AddReview/" class="btn btn-outline-info">İnceleme Ekle</a>
            </div>
        </div>
    </div>
</div>
