@model EntityLayer.Concrete.Review
@{
    ViewData["Title"] = "AddReview";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


@using (Html.BeginForm("AddReview", "Review", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description">İnceleme Ekleme Paneli </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>İnceleme</label>
                        <input type="text" class="form-control" name="Name">
                    </div>
                    <div class="form-group">
                        <label>Tarih</label>
                        <input type="text" class="form-control" name="Date">

                    </div>
                    <div class="form-group">
                        <label>Fotoğraf Url</label>
                        <input type="text" class="form-control" name="Image URL">
                    </div>
                    <div class="form-group">
                        <label>Açıklama</label>
                        <textarea class="form-control" name="Description" rows="6"></textarea>
                    </div>
                    
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <button class="btn btn-dark">İptal</button>
                </form>
            </div>
        </div>
    </div>
}

