@using EntityLayer.Concrete
@model List<BList>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Kitap Listesi</h3>
</div>
<!-- Light table -->
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="name">#</th>
                <th scope="col" class="sort" data-sort="budget">Başlık</th>
                <th scope="col" class="sort" data-sort="budget">Sayfa</th>
                <th scope="col" class="sort" data-sort="budget">Şuan okunan</th>
                <th scope="col" class="sort" data-sort="status">Oran</th>
                <th scope="col">Sil</th>
                <th scope="col" class="sort" data-sort="completion">Düzenle</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody class="list">
            @{ //int hesaplama = 0;
                int yuzde = 100;
                
            }

            @foreach (var item in Model)
            {
                <tr>
                    <th>
                        @item.BListID
                    </th>
                    <td class="budget">
                        @item.Title
                    </td>
                    <td class="budget">
                        @item.Sayfa
                    </td>
                    <td class="budget">
                        @item.OkunanSayfaOranı
                    </td>



                    <td>
                        <div class="d-flex align-items-center">
                            <span class="completion mr-2">@Convert.ToInt32(((@Convert.ToInt32(item.OkunanSayfaOranı) * @yuzde)) / (@Convert.ToInt32(item.Sayfa))) %</span>
                            <div>
                                <div class="progress">
                                    <div class="progress-bar bg-success" role="progressbar" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100" style="width: @Convert.ToInt32(((@Convert.ToInt32(item.OkunanSayfaOranı) * @yuzde)) / (@Convert.ToInt32(item.Sayfa)))%;"></div>
                                </div>
                            </div>
                        </div>
                    </td>
                    <td><a href="/BList/DeleteBList/@item.BListID" class="btn btn-danger">Sil</a></td>
                    <td><a href="/BList/EditBList/@item.BListID" class="btn btn-info">Güncelle</a></td>
                </tr>

            }


        </tbody>
    </table>
    <a href="/BList/AddBList/" class="btn btn-primary">Yeni Kitap Ekle</a>
</div>


