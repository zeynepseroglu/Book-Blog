@using EntityLayer.Concrete
@model List<Message>
<div class="section px-3 px-lg-4 pt-5" id="testimonials">
    <div class="container-narrow">
        <div class="text-center mb-5">
            <h2 class="marker marker-center">Yazar Yorumları</h2>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-12" data-aos="fade-right" data-aos-delay="100">
                    <div class="d-flex ms-md-3"><span><i class="fas fa-2x fa-quote-left"></i></span><span class="m-2">@item.Content</span></div>
                    <div class="d-flex justify-content-end align-items-end">
                        <div class="text-end me-2">
                            <div class="fw-bolder">@item.Name</div>
                            <div class="text-small">@item.CommentHead </div>
                        </div><img class="me-md-3 rounded" src="@item.ImageUrl" width="96" height="96" alt="client 1" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>