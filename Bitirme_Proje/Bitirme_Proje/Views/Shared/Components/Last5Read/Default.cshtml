@using EntityLayer.Concrete
@model List<BList>

<div class="col-md-8 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="d-flex flex-row justify-content-between">
                <h4 class="card-title mb-1">Okuyorum & Okuyacağım</h4>
                <p class="text-muted mb-1">Okuma Durumları</p>
            </div>
            <div class="row">
                <div class="col-12">
                    @{ int yuzde = 100; }
                    @foreach (var item in Model)
                    {
        <div class="preview-list">
            <div class="preview-item border-bottom">
                <div class="preview-thumbnail">
                    <div class="preview-icon bg-info">
                        <i class="mdi mdi-book"></i>
                    </div>
                </div>
                <div class="preview-item-content d-sm-flex flex-grow">
                    <div class="flex-grow">
                        
                        <p class="text-muted mb-0">Kitap adı: @item.Title</p>
                    </div>
                    <div class="mr-auto text-sm-right pt-2 pt-sm-0">
                        <p class="text-muted">Sayfa sayısı: @item.Sayfa</p>
                        <p class="text-muted mb-0">Tamamlanma oranı: @Convert.ToInt32(((@Convert.ToInt32(item.OkunanSayfaOranı) * @yuzde)) / (@Convert.ToInt32(item.Sayfa))) %</p>
                    </div>
                </div>
            </div>
        </div>}
                </div>
            </div>
        </div>
    </div>
</div>