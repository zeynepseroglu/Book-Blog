@model EntityLayer.Concrete.Message
@{
    ViewData["Title"] = "EditUserCm";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<div class="card-header border-0">
    <h3 class="mb-0">Yorum Detay Sayfası</h3>
</div>
@using (Html.BeginForm("EditUserCm", "UserCm", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
  
                <form class="forms-sample">
                    <div class="form-group">
                        <label>ID</label>
                        @Html.TextBoxFor(x => x.MessageID, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Ad Soyad</label>
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                    </div>
                    @*<div class="form-group">
            <label>Meslek</label>
            @Html.TextBoxFor(x => x.Company, new { @class = "form-control" })
        </div>*@
                    <div class="form-group">
                        <label>Mail</label>
                        @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Fotoğraf Url</label>
                        @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Yorum Başlığı</label>
                        @Html.TextBoxFor(x => x.CommentHead, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Yorum </label>
                        @Html.TextAreaFor(x => x.Content, 8, 3, new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Onayla</button>
                    <button class="btn btn-dark">İptal</button>
                </form>
            </div>
        </div>
    </div>
}



